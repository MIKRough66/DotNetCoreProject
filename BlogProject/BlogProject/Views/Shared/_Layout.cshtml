<!DOCTYPE html>



<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <meta name="description" content="@ViewBag.Description" />
    <meta name="keywords" content="@ViewBag.Keywords" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="~/css/Style.css" rel="stylesheet" />
</head>
<body>
    <div>
        <nav>
            <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="Programing">Programing</a>
            <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="Travel">Travel</a>
            <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="Photography">Photography</a>
            <a asp-area="" asp-controller="Panel" asp-action="Index">Admin</a>

            @if (User.Identity.IsAuthenticated)
            {
                <a asp-area="" asp-controller="Auth" asp-action="Logout">LogOut</a>
            }
            else
            {
                <a asp-area="" asp-controller="Auth" asp-action="Login">SignIn</a>
            }
        </nav>
    </div>

    <div>
        @RenderBody()
    </div>
    @RenderSection("scripts", false)
</body>
</html>